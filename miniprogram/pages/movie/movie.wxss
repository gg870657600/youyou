button::after{ 
	border: none;
  border-radius: 0; 
}
button{
  border-radius: 50rpx;
  padding: 5rpx;
  margin: 25rpx;
  color: white
}
#buttonList[loading] ::before {
  vertical-align: text-bottom;
}
