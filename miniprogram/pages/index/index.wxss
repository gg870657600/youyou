.title{
  width:100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: rgba(133, 6, 133, 0.8);
  /* margin-bottom:2px; */
  text-align: center;
  
}
/* .title text{
  margin:0 auto;
} */
.title .music1{
  width:80rpx;
  height:80rpx;
  position: absolute;
  top:10rpx;
  right: 30rpx;
  opacity:0.5;
  animation: headRotate 6s linear infinite
}
@keyframes headRotate{
  0% {transform: rotate(0deg);}
  50% {transform: rotate(180deg);}
  100% {transform: rotate(360deg);}
}
.title .music2{
  width:80rpx;
  height:80rpx;
  position: absolute;
  top:10rpx;
  right: 30rpx;
  opacity:0.5
}
.msgList{
  width:100%;
  height:870rpx;
  background-color: rgba(211, 58, 211, 0.1);
  display: flex; 
  flex-direction: column;
  margin-top:100rpx
}
/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.msgList .wrap{
  width:100%;
  height:200rpx;
  border:1px solid rgba(0, 0, 0, 0.1);
  box-sizing:border-box
}

.msgList .wrap .content{
  text-overflow:ellipsis;
  word-wrap:break-word;
  margin:5rpx;

}
.wrap .headImg{
  border-radius:50%;
  overflow:hidden;
  display:inline-block;
  height:80rpx;
  width:80rpx;
  margin:10rpx;
}
.wrap .time{
  display: block;
  text-align: right;
  padding-right: 10rpx;
}
.inputContent{
  width:100%;
  height:100rpx;
  background-color: rgb(107, 0, 128);
  margin:2px;
  display: flex;
  border-radius: 10px;
  box-sizing:border-box;
}
.inputContent input{
  height: 100%;
  width:100%;
  text-overflow:ellipsis;
  border-radius: 10px
}
.send{
  width:100%;
  height:80rpx;
  text-align: center;
  background-color: rgb(128, 0, 79);
  display: flex;

}
.send button{
  line-height:80rpx;
  width:100%
}
/* 按钮特效 */
.plain-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 10px #bbbec4 inset; 
}