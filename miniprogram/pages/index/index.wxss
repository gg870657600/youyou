/**index.wxss**/

page {
  background: #f6f6f6;
  width:100%;
  height: 100%;
}
.container{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-image: url(https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1561514779&di=e2d4b216b2ea52c698ea8e72e2019ad8&imgtype=jpg&er=1&src=http%3A%2F%2Fb-ssl.duitang.com%2Fuploads%2Fblog%2F201601%2F05%2F20160105171447_yPKmU.thumb.700_0.jpeg);
  background-size:100% 100%;
}
.title{
  width:100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: rgba(133, 6, 133, 0.8);
  margin-bottom:2px;
  text-align: center

}
/* .title text{
  margin:0 auto;
} */
.msgList{
  width:100%;
  height:870rpx;
  background-color: rgba(211, 58, 211, 0.1);
  display: flex; 
  flex-direction: column;

}
/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.msgList .wrap{
  width:100%;
  height:200rpx;
  border:1px solid rgba(0, 0, 0, 0.1)
}

.msgList .wrap .content{
  text-overflow:ellipsis;
  word-wrap:break-word;
  margin:5rpx;

}
.wrap .headImg{
  border-radius:50%;
  overflow:hidden;
  display:inline-block;
  height:80rpx;
  width:80rpx;
  margin:10rpx;
}
.wrap .time{
  display: block;
  text-align: right;
  padding-right: 10rpx;
}
.inputContent{
  width:100%;
  height:100rpx;
  background-color: rgb(107, 0, 128);
  margin:2px;
  display: flex;
  border-radius: 10px
}
.inputContent input{
  height: 100%;
  width:100%;
  text-overflow:ellipsis;
  border-radius: 10px
}
.send{
  width:100%;
  height:80rpx;
  text-align: center;
  background-color: rgb(128, 0, 79);
  display: flex;

}
.send button{
  line-height:80rpx;
}