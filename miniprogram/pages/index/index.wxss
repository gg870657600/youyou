/**index.wxss**/

page {
  background: #f6f6f6;
  width:100%;
  height: 100%;
}
.container{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.title{
  width:100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: blue;
  margin:2px;
  text-align: center

}
/* .title text{
  margin:0 auto;
} */
.msgList{
  width:100%;
  height:1000rpx;
  background-color: green;
  display: flex; 
  flex-direction: column;

}
/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.msgList .wrap{
  width:100%;
  height:200rpx;
  border:1px solid rgba(0, 0, 0, 0.1)
}

.msgList .wrap .content{
  text-overflow:ellipsis;
  word-wrap:break-word;
  margin:5rpx;

}
.wrap .headImg{
  border-radius:50%;
  overflow:hidden;
  display:inline-block;
  height:80rpx;
  width:80rpx;
  margin:10rpx;
}
.wrap .time{
  display: block;
  text-align: right;
  padding-right: 10rpx;
}
.inputContent{
  width:100%;
  height:100rpx;
  background-color: rgb(107, 0, 128);
  margin:2px;
  display: flex;

}
.inputContent input{
  height: 100%;
  width:100%;
  text-overflow:ellipsis;
}
.send{
  width:100%;
  height:80rpx;
  text-align: center;
  background-color: rgb(128, 0, 79);
  display: flex;

}
.send button{
  line-height:80rpx;
}