/* pages/dog/dog.wxss */

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
  opacity: 0.5 
}

#header {
  width:100%;
  display: flex;
  align-items: center;
  padding: 2rpx 2rpx 2rpx 2rpx;
  margin: 0 0 5rpx;
  flex-shrink: 0;
  background-color: #fff;
  box-shadow: 0 0 20px rgba(0,0,0,.1);
    }
#header .image_header {width:60rpx;height: 60rpx;}
#header h1 {margin:2rpx 0 0;font-size: 50rpx;line-height: 150%;font-family: "MFShangYa";font-weight: normal;}
#header p {font-size: 50rpx;margin: 2rpx 0 0 auto;font-family: "HYTiaoTiao"}

#article {
  margin: 0;
  padding: .4rem;
  letter-spacing: 2px;
  color: #03081A;
  text-align: justify;
  flex: 1;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  -ms-overflow-style: none;
    }
#time{
  margin-top: 30rpx;
  padding:5rpx;
  text-align:right
}
#refresh {
  position: absolute;
  bottom: 180rpx;
  border: 0 none;
  margin: 0;
  padding: 0;
  /* background-color: #fff; */
  width: 120rpx;
  height: 120rpx;
  color: transparent;
  border-radius: 100%;
  background-size: cover;
  background-position: 50% 50%;
  background-repeat: no-repeat;
  box-shadow: 0 0 4rpx rgba(0,0,0,0.5);
  /* cursor: pointer; */
  outline: 0;
  opacity: 0.8
    }

#myRefresh {
  position: absolute;
  bottom: 20rpx;
  border: 0 none;
  margin: 0;
  padding: 0;
  background-color: rgba(151, 28, 189, 0.233);
  width: 120rpx;
  height: 120rpx;
  color: transparent;
  border-radius: 100%;
  background-size: cover;
  background-position: 50% 50%;
  background-repeat: no-repeat;
  box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.5);
  /* cursor: pointer; */
  outline: 0;
  opacity: 0.8
    }
