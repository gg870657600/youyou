.userinfo, .uploader {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #ae00ff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.uploader {
  height: auto;
  /* padding: 0 0 0 40rpx; */
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}
.webView{
  width:100%
}
.uploader-text {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #ae00ff;
}

.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

/* 育儿界面 */
.maskLayer{
  position: absolute;
  width:100%;
  height: 100%;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.3)
}
.hidePage{
  position: fixed;
  z-index: 9999;
  bottom: 0;
  width:100%;
  margin:0 auto;
  background: rgb(27, 193, 223);
  border-radius: 5px 5px 0 0
}
.hidePage button{
  height: 100rpx;  
}
button::after {
  border-bottom: 1rpx solid rgba(0,0,0,0.2)
}
.plain-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 10px #bbbec4 inset; 
}
.cancel{
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgb(16, 106, 122);
  color: rgb(0,255,255)
}

